<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ItemDetailMapper">
    <select id="countItemsDetail" resultType="int">
        SELECT COUNT(*)
        FROM items_detail
    </select>

    <insert id="saveItemDetail" parameterType="productOptionRegistrationRequestDto" useGeneratedKeys="true" keyProperty="detailId">
        INSERT INTO items_detail
            (`item_id`, `option`, `quantity`, `created_at`, `modified_at`)
        VALUES
            (#{itemId}, #{option}, #{quantity}, NOW(), NOW())
    </insert>

    <select id="findAllItemDetailByItemId" parameterType="productOptionRequestDto" resultType="itemDetail">
        SELECT `item_id`, `detail_id`, `option`, `quantity`
        FROM items_detail
        WHERE `item_id` = #{itemId}
    </select>

    <select id="findItemDetailByDetailId" parameterType="productOptionUpdateRequestDto" resultType="productOptionResponseDto">
        SELECT `detail_id`, `item_id`, `option`, `quantity`
        FROM items_detail
        WHERE `detail_id` = #{detailId}
    </select>

    <update id="updateItemDetail" parameterType="itemDetail">
        UPDATE items_detail
        SET `quantity` = #{quantity}, `option` = #{option}, `modified_at` = NOW()
        WHERE `detail_id` = #{detailId}
    </update>
</mapper>